<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="3000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="left" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/imageView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />
        <Constraint
            android:id="@+id/vEconomia"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.503"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp"
            motion:layout_constraintStart_toEndOf="parent" />
        <Constraint
            android:layout_height="450dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/vEduacion"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:layout_height="450dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/vCienciaTecnologia"
            motion:layout_constraintTop_toBottomOf="parent" />
        <Constraint
            android:id="@+id/vSaludBienestar"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintBottom_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/imageView"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />
        <Constraint
            android:layout_height="400dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="350dp"
            android:id="@+id/vEduacion"
            motion:layout_editor_absoluteX="309dp" />
        <Constraint
            android:layout_height="450dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.491"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="380dp"
            android:id="@+id/vEconomia"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/imageView3"
            motion:layout_constraintTop_toBottomOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/imageView4"
            motion:layout_constraintBottom_toTopOf="@+id/imageView" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end2">

        <Constraint
            android:layout_height="450dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/vCienciaTecnologia"
            motion:layout_constraintTop_toBottomOf="parent" />
        <Constraint
            android:layout_height="450dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="380dp"
            android:id="@+id/vEduacion"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/vEconomia"
            motion:layout_constraintStart_toEndOf="parent"
            android:layout_width="350dp"
            android:layout_height="380dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp" />
        <Constraint
            android:id="@+id/vSaludBienestar"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toTopOf="parent" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageView"
            android:layout_marginTop="8dp" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/imageView4"
            motion:layout_constraintBottom_toBottomOf="@+id/vSaludBienestar" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/imageView3"
            motion:layout_constraintTop_toTopOf="@+id/vCienciaTecnologia" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end2"
        motion:duration="3000">
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorSide="right" />
    </Transition>
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/end2"
        motion:duration="3000">
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="left" />
    </Transition>
    <ConstraintSet
        android:id="@+id/end3"
        motion:deriveConstraintsFrom="@+id/start" >
        <Constraint
            android:layout_height="450dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="350dp"
            android:id="@+id/vCienciaTecnologia"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/vEconomia"
            motion:layout_constraintStart_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="380dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.503"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp" />
        <Constraint
            android:id="@+id/vEduacion"
            motion:layout_constraintEnd_toStartOf="parent"
            android:layout_height="450dp"
            android:layout_width="350dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/imageView3"
            motion:layout_constraintTop_toBottomOf="parent" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end3"
        motion:duration="3000">
        <OnSwipe motion:dragDirection="dragUp"
            motion:touchAnchorSide="bottom" />
    </Transition>
    <ConstraintSet
        android:id="@+id/end4"
        motion:deriveConstraintsFrom="@+id/start" >
        <Constraint
            android:layout_height="450dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="350dp"
            android:id="@+id/vSaludBienestar"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.498" />
        <Constraint
            android:id="@+id/vEduacion"
            motion:layout_constraintEnd_toStartOf="parent"
            android:layout_height="380dp"
            android:layout_width="350dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            motion:layout_constraintEnd_toStartOf="@+id/btn32"
            android:layout_width="150dp"
            android:layout_height="150dp"
            motion:layout_constraintTop_toBottomOf="@+id/txt4"
            motion:layout_constraintStart_toStartOf="@+id/vSaludBienestar"
            android:layout_marginTop="32dp"
            android:id="@+id/btn31" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="@+id/vSaludBienestar"
            motion:layout_constraintStart_toEndOf="@+id/btn31"
            android:layout_width="150dp"
            android:layout_height="150dp"
            motion:layout_constraintTop_toBottomOf="@+id/txt4"
            android:layout_marginTop="32dp"
            android:id="@+id/btn32" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/imageView4"
            motion:layout_constraintBottom_toTopOf="parent" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end4"
        motion:duration="3000">
        <OnSwipe motion:dragDirection="dragDown"
            motion:touchAnchorSide="bottom" />
    </Transition>
    <Transition
        motion:constraintSetStart="@+id/end3"
        motion:constraintSetEnd="@+id/end4"
        motion:duration="3000">
        <OnSwipe motion:dragDirection="dragDown"
            motion:touchAnchorSide="bottom" />
    </Transition>
</MotionScene>